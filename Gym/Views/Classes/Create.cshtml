@{
  Layout = "_Layout";
}

@model Gym.Models.Class
<h4>Add a new class to CMJ gym!</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.InstructorId)
  @Html.DropDownList("InstructorId")
  <br>
  @Html.LabelFor(model => model.LocationId)
  @Html.DropDownList("LocationId")
  <br>
  <input type="submit" value="Add new class"/>
}

<p>@Html.ActionLink("Show all classes", "Index")</p>